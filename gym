#!/bin/bash

# 健身房回本计划 - 统一启动脚本
# 用法: ./gym [admin|public]

case "$1" in
  admin)
    echo "🚀 启动管理后台..."
    ./start-admin.sh
    ;;
  public)
    echo "🚀 启动公开展示页..."
    ./start-public.sh
    ;;
  *)
    echo "╔════════════════════════════════════════════════════════╗"
    echo "║         健身房回本计划 - 启动菜单                      ║"
    echo "╚════════════════════════════════════════════════════════╝"
    echo ""
    echo "请选择要启动的服务:"
    echo ""
    echo "  1) 管理后台   - 记录支出和活动"
    echo "  2) 公开展示页 - 展示回本进度"
    echo ""
    read -p "请输入选项 (1/2): " choice

    case "$choice" in
      1)
        echo ""
        ./start-admin.sh
        ;;
      2)
        echo ""
        ./start-public.sh
        ;;
      *)
        echo ""
        echo "❌ 无效选项，请输入 1 或 2"
        exit 1
        ;;
    esac
    ;;
esac
